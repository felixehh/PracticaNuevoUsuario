<UserControl x:Class="PracticaNuevoUsuario.controldatosalumno"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PracticaNuevoUsuario"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel>
        <TextBlock>Nombre:</TextBlock>
        <TextBox></TextBox>
        <TextBlock>Direccion:</TextBlock>
        <TextBox></TextBox>
        <TextBlock>Carrera:</TextBlock>
        <ComboBox>
            <ComboBoxItem>Ing. Multimedia</ComboBoxItem>
            <ComboBoxItem>Ing. Mecatronica</ComboBoxItem>
            <ComboBoxItem>Psicologia</ComboBoxItem>
        </ComboBox>
        <TextBlock>Preparatoria de procedencia:</TextBlock>
        <TextBox></TextBox>
        <Button HorizontalAlignment="Right" Margin="0,5,20,0" Name="btnGuardar" Click="btnGuardar_Click">Guardar</Button>
    </StackPanel>
</UserControl>
